---
import Mayam from '../../assets/colores.png';
---
<main>
    <section class="w-full px-4 py-16 p-2">
    <h1 class="text-[36px] leading-[54px] font-bold text-foreground/70 mb-2 p-4 text-center">
        Aliados Estrategicos
    </h1>
    <section class="pt-7">
        <div class="w-[200px] h-[200px] border-2 p-2">
            <img src={Mayam .src} alt="">
        </div>
        </section>
        <section class=" flex justify-center gap-16">

    <section class="w-[500px] h-[50px] pt-18">
        <h2 class="font-bold text-[#AC8178] text-[30px]">Contáctanos</h2>
        <h1 class="text-[65px] text-foreground/80 ">Incrementa la <strong class="text-black">experiencia</strong> de tus clientes!</h1>
    </section>
   
        <form class=" h-[690px] w-[300px] ml-auto mr-auto m-2 pt-18 " id="formulario">
    
    <p>Con quien tenemos el gusto</p>
    <input type="text" name="nombre" placeholder="Nombre Completo" />
    <p>Cargo empresarial</p>
    <input type="text" name="cargo" placeholder="Dueño de negocio" />
    <p>Correo eletronico</p>
    <input type="email" name="correo" placeholder="@" />
  
    <p>Ingresa tus datos</p>
    <select class="text-foreground/80 fond-bold" >
        <option>Servicio Mapache</option>
        <option>Innovacion Empresarial</option>
        <option>Diseno de Branding</option>
        <option>Workshops Mapache</option>
        <option>Quiero la prueba de usabilidad</option>
        <option>Quiero la radiografia finaciera</option>
        <option>Quiero el diagsnotico de Marca</option>
    </select>
    
    <div class=" pt-[200px]">
        <p class="">Comentariois</p>
    <textarea class="p-3" name="comentarios" placeholder="¿Como podemos ayudarte?"></textarea>
    </div>
   
</form>
   
        </section>
</section>
</main>


<style>
  main {
		padding-inline: 80px;
		max-width: auto;
		min-width: 500px;
        
	}

 input{
        border: 1px solid #ccc;  
        padding: 2px 18px 2px 12px;
           
        border-radius: 6px;       
        width: 100%;
    }
    textarea{
       
        color: #000;
        width: auto;
        height: 100px;
        border-radius: 6px;  
        border: 1px solid #ccc;  
        
    }
    p{
        color:#9b9898;
        padding-top: 20px;
        padding-bottom:2px;
        font-size: 14px;
       
    }
    option{
        color: #25282A/100;
        padding: 0 18px 0 12px;  
        border-radius: 6px;       
        width: auto;
    }
   
</style>