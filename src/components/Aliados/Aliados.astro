---
import Mayam from '../../assets/colores.png';
---
<main class="px-20 max-w-full min-w-0">
    <section class="w-full px-4 py-16 p-2">
    <h1 class="text-[36px] leading-[54px] font-bold text-foreground/70 mb-2 p-4 text-center">
        Aliados Estrategicos
    </h1>
    <div class="pt-7">
        <div class="w-[200px] h-[200px] border-2 p-2">
            <img src={Mayam.src} alt="mayam">
        </div>
    </div>
        <div class=" flex justify-center gap-16">

    <div class="w-[500px] h-[50px] pt-20">
        <h2 class="font-bold text-[#AC8178] text-[30px]">Contáctanos</h2>
        <h1 class="text-[65px] text-foreground/80 ">Incrementa la <strong class="text-black">experiencia</strong> de tus clientes!</h1>
    </div>
   
        <form class=" h-[690px] w-[300px] ml-auto mr-auto m-2 pt-20 " id="formulario">
    
    <p>Con quien tenemos el gusto</p>
    <input type="text" name="nombre" placeholder="Nombre Completo" />
    <p>Cargo empresarial</p>
    <input type="text" name="cargo" placeholder="Dueño de negocio" />
    <p>Correo electrónico</p>
    <input type="email" name="correo" placeholder="@" />
  
    <p>Ingresa tus datos</p>
    <select class="text-foreground/100 w-full border-2 rounded-b" >
        <option>Servicio Mapache</option>
        <option>Innovación Empresarial</option>
        <option>Diseño de Branding</option>
        <option>Workshops Mapache</option>
        <option>Quiero la prueba de usabilidad</option>
        <option>Quiero la radiografía financiera</option>
        <option>Quiero el diagnóstico de Marca</option>
    </select>
    
    <div class=" pt-[200px]">
        <p class="">Comentarios</p>
    <textarea class="p-3" name="comentarios" placeholder="Cómo podemos ayudarte?"></textarea>
    </div>
   
</form>
   
        </div>
</section>
</main>


<style>
 

 input{
        border: 1px solid #ccc;  
        padding: 2px 18px 2px 12px;  
        border-radius: 6px;       
        width: 100%;
    }
    textarea{
       
        color: #000;
        width: 100%;
        height: 100px;
        border-radius: 6px;  
        border: 1px solid #ccc;  
        
    }
    p{
        color:#9b9898;
        padding-top: 20px;
        padding-bottom:2px;
        font-size: 14px;
       
    }
    option{
        color: #9b9898;
        padding: 0 18px 0 12px;  
        border-radius: 6px;       
    }
   
</style>