---
const { label, bgColor="bg-primary", textColor="text-foreground", icon='' } = Astro.props;
---

<button
  type="button"
  class={`flex items-center gap-2 w-auto max-w-[480px] rounded-2xl font-medium py-1 cursor-pointer px-2 hover:opacity-80 ${bgColor} ${textColor}`}
>
  {icon && <img src={icon} alt="icono" class="w-3 h-3" />}
  <span>{label}</span>
</button>
