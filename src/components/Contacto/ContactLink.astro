---
type Props = {
	href: string;
	class?: string;
};

const { class: className, href } = Astro.props;

---

<a
	class:list={[
		'flex justify-center items-center round bg-[#fcdbc9] w-[47px] h-[47px] cursor: pointer hover:scale-110 transition rounded-3xl'
		,
		className,
	]}
	href={href} target="_blank"
	>
		<slot />
	</a>

