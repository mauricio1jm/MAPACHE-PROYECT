---
type Props = {
	imgSrc: string;
	title: string;
	subtitle: string;
	letter: string;
};

let { body, imgSrc, title, price } = Astro.props;
---

<article class="shoe-card">
	<img src={imgSrc} alt="Shoe Image" />
	<div class="shoe-card-content">
		<h4 class="shoe-card-title">
			{title}
		</h4>
		<span class="shoe-card-price">
			{price}
		</span>
		<p class="shoe-card-body">
			{body}
		</p>
	</div>
</article>

<style>
	.shoe-card {
		background: #fafafa;
		border-radius: 24px;
		padding: 1rem;

		display: flex;
		flex-direction: column;
		row-gap: 12px;

		min-width: 200px;
		min-height: 260px;
	}

	.shoe-card img {
		width: auto;
		height: 140px;

		border-radius: 12px;

		object-fit: cover;
	}

	.shoe-card-content {
		width: 100%;
		flex: 1;
	}

	.shoe-card-title {
		font-size: 18px;
		font-weight: 600;
		color: #131313;
		line-height: 14px;
	}

	.shoe-card-price {
		font-size: 12px;
		color: #2e2e2e;

		text-wrap: pretty;
		margin-bottom: 6px;
	}

	.shoe-card-body {
		font-size: 14px;
		color: #bababa;

		text-wrap: pretty;
	}
</style>
